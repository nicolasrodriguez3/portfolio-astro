---
import Layout from "../layouts/Layout.astro"
import Section from "../components/Section.astro";
import Services from "../components/Services.astro";
---

<Layout title="NicoDev | Desarrollador Web">
	<main>
		<Section title="" class="flex flex-col flex-wrap">
			<picture class="">
				<img class="rounded-full bg-blue-300 size-20 object-cover" src="/img-perfil.png" alt="Foto de mi persona" />
			</picture>
			<div class="flex flex-col justify-center">
				<h1>Soy Nicolás Rodríguez</h1>
				<h3>Frontend Developer</h3>
			</div>
		</Section>
		<Services />
		<Section title="Proyectos">
			<p>Proyecto 1
			</p>
		</Section>
		<Section title="Sobre mí">
			<p>Creativo, innovador, resolutivo</p>
		</Section>
	</main>
</Layout>


<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 2rem;
		font-weight: 700;
		line-height: 1;
	}
</style>
