---
import  SpeedInsights  from "@vercel/speed-insights/astro"
import Header from "../components/Header.astro"
interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Desarrollador web con dos años de experiencia, listo para trabajar en tu proyecto." />
		<meta name="og:title" content="Nicolás Rodríguez | Desarrollador Web"/>
		<meta name="title" property="og:title" content="Nicolás Rodríguez | Desarrollador Web">
		<meta name="description" property="og:description" content="Desarrollador web con dos años de experiencia, listo para trabajar en tu proyecto.">
		<meta name="keywords" content="desarrollador frontend, programador web, HTML, CSS, JavaScript, React, Vue.js, Angular, diseño web, experiencia de usuario, UI/UX, responsive design, desarrollo web, portafolio, proyectos, tecnología, informática, programador, páginas web, Nicolas Rodriguez, frontend, innovación, moderno, landing page, creadores de páginas web, página para mi emprendimiento, página para mi negocio">
		<meta name="image" property="og:image" content="/screenshot.jpg">

		<meta name="viewport" content="width=device-width" />
		<meta name="author" content="Nicolás Rodríguez">

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" media="(prefers-color-scheme: light)" />
		<link rel="icon" type="image/svg+xml" href="/favicon-white.svg" media="(prefers-color-scheme: dark)" />

		<meta name="google-site-verification" content="JT_N6C_xK-UEHGml-VVkUUUh1O0yx-VAp3b-IjQvbO4" />

		<!-- Font -->
		<link rel="preconnect" href="https://rsms.me/" />
		<link rel="stylesheet" href="https://rsms.me/inter/inter.css" />

		<title>{title}</title>
	</head>
	<body class="">
		<div class="fixed top-0 -z-10 h-screen w-screen bg-white dark:bg-gray-950 bg-[radial-gradient(100%_50%_at_50%_0%,rgba(0,163,255,0.13)_0,rgba(0,163,255,0)_60%,rgba(0,163,255,0)_100%)]">
		</div>
		<Header />
		<slot />
	</body>
</html>
<style is:global>
	*{
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	:root {
		font-family: Inter, sans-serif;
		font-feature-settings:
			"liga" 1,
			"calt" 1; /* fix for Chrome */
	}
	@supports (font-variation-settings: normal) {
		:root {
			font-family: InterVariable, sans-serif;
		}
	}
	html {
		font-family: system-ui, sans-serif;
		background: #ddd;
		color-scheme: light dark;
		scroll-behavior: smooth;
	}
	body{
		width: 100%;
	}

	@media prefered-motion-reduce {
		html{
			scroll-behavior: auto;
		}
	}
</style>
